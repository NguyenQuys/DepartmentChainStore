                        <label for="timeUpdate" class="form-label">Thời Gian Cập Nhật</label>
                        <input type="datetime-local" class="form-control" id="timeUpdate" value="{{ DateTime.Now }}" required>
                    </div> *@
     @*                <div class="mb-3">
                        <label for="isActive" class="form-label">Kích Hoạt</label>
                        <input type="checkbox" class="form-check-input" id="isActive" checked>
                    </div> *@
                    <button type="button" id="btn_promotion" class="btn btn-primary"></button>
                </form>
            </div>
        </div>
    </div>
</div>
