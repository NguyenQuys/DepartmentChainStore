@model List<ProductService_5000.Models.Product>

@{
    ViewBag.Title = "Product List";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Updated By</th>
            <th>Updated Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.CategoryId</td> <!-- Assuming CategoryProduct has a Name property -->
                <td>@product.UpdatedBy</td>
                <td>@product.UpdatedTime.ToString("dd-MM-yyyy HH:mm")</td>
                <td>
                    <a href="/Product/Edit/@product.Id" class="btn btn-primary">Edit</a>
                    <a href="/Product/Delete/@product.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Count == 0)
{
    <p>No products available.</p>
}
